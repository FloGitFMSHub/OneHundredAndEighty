<Application x:Class="OneHundredAndEightyCore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="Windows/Main/MainWindow.xaml"
             Startup="App_OnStartup">
    <Application.Resources>
        <Style x:Key="MainWindowTextBoxStyle">
            <Setter Property="Control.HorizontalAlignment" Value="Stretch" />
            <Setter Property="Control.Foreground" Value="MidnightBlue" />
            <Setter Property="Control.FontFamily" Value="Agency FB" />
            <Setter Property="Control.FontSize" Value="20" />
            <Setter Property="Control.FontWeight" Value="Bold" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Left" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.Background" Value="#3F0AF8A1" />
            <Setter Property="Control.BorderBrush" Value="#7F0A8BF8" />
            <Setter Property="TextBox.SelectionBrush" Value="#BF00A369" />
        </Style>
        <Style x:Key="MainWindowComboBoxStyle">
            <Setter Property="Control.Foreground" Value="MidnightBlue" />
            <Setter Property="Control.FontFamily" Value="Agency FB" />
            <Setter Property="Control.FontSize" Value="20" />
            <Setter Property="Control.FontWeight" Value="Bold" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Left" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.BorderBrush" Value="#7F0A8BF8" />
