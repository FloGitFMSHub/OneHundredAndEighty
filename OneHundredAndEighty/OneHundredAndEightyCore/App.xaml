<Application x:Class="OneHundredAndEightyCore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="Windows/Main/MainWindow.xaml"
             Startup="App_OnStartup">
    <Application.Resources>
        <Style x:Key="MainWindowTextBoxStyle">
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.Width" Value="50" />
            <Setter Property="Control.HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="MainWindowSetupSliderStyle">
            <Setter Property="Control.HorizontalAlignment" Value="Center" />
            <Setter Property="Slider.Orientation" Value="Vertical" />
            <Setter Property="Slider.Maximum" Value="1000" />
            <Setter Property="Control.IsEnabled" Value="False" />
        </Style>
        <Style x:Key="MainWindowLabelStyle">
            <Setter Property="Control.HorizontalAlignment" Value="Left" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="MainWindowSetupSectorsComboboxStyle"
               TargetType="ComboBox">
