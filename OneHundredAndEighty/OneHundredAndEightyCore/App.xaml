        <Style x:Key="MainWindowLegsSetsComboboxStyle" TargetType="ComboBox"
               BasedOn="{StaticResource MainWindowComboBoxStyle}">
            <Setter Property="ItemsSource">
                <Setter.Value>
                    <x:Array Type="system:Int32">
                        <system:Int32>1</system:Int32>
                        <system:Int32>3</system:Int32>
